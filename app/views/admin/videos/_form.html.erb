<%= form_for [:admin, video], remote: true, html: { style: 'display:inline;' } do |f| %>
  <div class="modal-body">
    <div class="errors"></div>
    <div class="form-group">
      <%= f.label :name, class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :url, 'Link', class: 'control-label' %>
      <%= f.text_field :url, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'control-label' %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class='row'>
      <div class="form-group col-sm-6">
        <%= f.label :practice_id, class: 'control-label' %>
        <%= f.collection_select(:practice_id, practices, :id, :name,
          { include_blank: true }, { class: 'form-control' }) %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :user_id, 'Presenter', class: 'control-label' %>
        <%= f.collection_select(:user_id, users, :id, :full_name,
          { include_blank: true }, { class: 'form-control' }) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.check_box :active %>
      <%= f.label :active, class: 'control-label' %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn', data: { dismiss: 'modal' } %>
  </div>
<% end %>
