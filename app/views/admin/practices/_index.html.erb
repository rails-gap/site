<table id="practices-table" class="table table-striped table-bordered" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% practices.each do |practice| %>
    <tr>
      <td><%= practice.name %></td>
      <td><i class="mdi mdi-<%= practice.icon %> mdi-24px"></i></td>
      <td>
        <%= link_to '', edit_admin_practice_path(practice), remote: true,
          class: 'btn btn-primary btn-sm glyphicon glyphicon-pencil' %>
        <%= link_to '', admin_practice_delete_path(practice), remote: true,
          class: 'btn btn-danger btn-sm glyphicon glyphicon-trash' %>
      </td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(document).ready(function() {
     $('#practices-table').DataTable({
       retrieve: true,
       iDisplayLength: 50,
       columns: [
         { type: "string" },
         { type: "string" },
         { orderable: false }
       ]
    });
  });
</script>
