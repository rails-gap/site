<table id="users-table" class="table table-striped table-bordered" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Position</th>
      <th>Personnel Manager</th>
      <th>Employee Type</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>
  <% users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.position.name if user.position %></td>
      <td><%= user.personnel_manager.name if user.personnel_manager %></td>
      <td><%= user.employee_type %></td>
      <td><%= user.location %></td>
      <td>
        <%= link_to 'Edit', edit_admin_user_path(user), remote: true,
          class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Delete', admin_user_delete_path(user), remote: true,
          class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(document).ready(function() {
     $('#users-table').DataTable({
       retrieve: true,
       iDisplayLength: 50,
       columns: [
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { orderable: false }
       ]
    });
  });
</script>
