<table id="users-table" class="table table-striped table-bordered" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Personnel Manager</th>
      <th>Employees</th>
      <th>Employee Type</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.position_level %></td>
      <td><%= user.personnal_manager_name %></td>
      <td><%= user.subordinates.size %></td>
      <td><%= user.employee_type %></td>
      <td><%= user.location %></td>
      <td>
        <%= link_to admin_user_roles_path(user), remote: true,
          class: 'btn btn-primary btn-sm' do %>
          <span class="glyphicon glyphicon-cog"></span> Roles
        <% end %>
        <%= link_to edit_admin_user_path(user), remote: true,
          class: 'btn btn-primary btn-sm' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to admin_user_delete_path(user), remote: true,
          class: 'btn btn-danger btn-sm' do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(document).ready(function() {
     $('#users-table').DataTable({
       retrieve: true,
       iDisplayLength: 50,
       columns: [
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { orderable: false }
       ]
    });
  });
</script>
