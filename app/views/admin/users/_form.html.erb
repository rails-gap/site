<%= form_for [:admin, user], remote: true, html: { style: 'display:inline;' } do |f| %>
  <div class="modal-body">
    <div class="errors"></div>
    <div class="row">
      <div class="form-group col-sm-6">
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :last_name, class: 'control-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'control-label' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="row">
      <div class="form-group col-sm-4">
        <%= f.label :position_id, class: 'control-label' %>
        <%= f.collection_select(:position_id, Position.all, :id, :name,
          {}, { class: 'form-control' }) %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :level, class: 'control-label' %>
        <% level_options = ['1', '1.5', '2', '2.5', '3', '3.5', '4', '4.5', '5'] %>
        <%= f.select :level, level_options, {}, { class: 'form-control' } %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :employee_type, class: 'control-label' %>
        <% employee_type_options = ['Regular', 'Contractor'] %>
        <%= f.select :employee_type, employee_type_options, {}, { class: 'form-control' } %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-6">
        <%= f.label :personnel_manager_id, class: 'control-label' %>
        <%= f.collection_select(:personnel_manager_id, personnel_managers, :id, :full_name,
          { include_blank: true }, { class: 'form-control' }) %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :location, class: 'control-label' %>
        <%= f.text_field :location, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.check_box :active %>
      <%= f.label :active, class: 'control-label' %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn', data: { dismiss: 'modal' } %>
  </div>
<% end %>
