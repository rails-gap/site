<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:page_title) ? (yield :page_title) : 'GAP-PORTAL' %></title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= yield(:css_include) %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= yield(:js_include) %>
  </head>
  <body>
    <%= render 'shared/messages', flash: flash %>
    <%= render 'shared/navbar' %>
    <div class="page">
      <div class="top-container">
        <%= yield(:full_page) %>
      </div>
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
