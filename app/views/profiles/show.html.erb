
<h1>PROFILE</h1>
<%= image_tag(current_user.image, class: 'profile-image') %>

<div>
  <span>Name:</span>
  <span><%= current_user.name %></span>
</div>
<div>
  <span>Email:</span>
  <span><%= current_user.email %></span>
</div>
<div>
  <span>Position:</span>
  <span><%= current_user.position.name if current_user.position %></span>
</div>
<div>
  <span>Employee Type:</span>
  <span><%= current_user.employee_type %></span>
</div>
<div>
  <span>Location:</span>
  <span><%= current_user.location %></span>
</div>
