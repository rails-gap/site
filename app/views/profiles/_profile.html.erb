<div class="col-md-2 col-sm-3">
  <div class="profile-card">
    <div>
      <%= link_to profile_path(user) do %>
        <%= image_tag(user.profile_image, class: 'profile-image img-circle') %>
      <% end %>
    </div>
    <div>
      <h4><%= user.full_name %></h4>
      <div class="profile-card-content">
        <span><%= user.position_level %></span>
        <span>
          <% user.practices.each do |practice| %>
            <i class="mdi mdi-<%= practice.icon %> mdi-24px" title="<%= practice.name %>"></i>
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>
