<header class="messages-header">
  <div class="container">
    <% flash.each do |type, message| %>
      <% timestamp = Time.now().strftime("%6N") %>
      <div id="flash-<%= timestamp %>" class="alert <%= bootstrap_class_for(type) %> fade in">
        <button class="close" data-dismiss="alert"><i class="glyphicon glyphicon-remove-circle"></i></button>
        <i class="glyphicon glyphicon-<%= bootstrap_icon_for(type) %>"></i> <%= message %>
      </div>

      <script type="text/javascript">
        $(function() {
          setTimeout(function() { return $("#flash-<%= timestamp %>").fadeOut(); }, 5000);
        });
      </script>
    <% end %>
  </div>
</header>
